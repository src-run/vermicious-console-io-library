; top-most EditorConfig file
root = true

; unix-style newlines globally
[*]
end_of_line = lf

[*.{php|xml},.php_cs.dist,phpunit.xml.dist]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
charset = utf-8

[*.{js|css|scss|less|yml||yaml|json}]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
charset = utf-8

[*output*.txt]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
charset = utf-8
